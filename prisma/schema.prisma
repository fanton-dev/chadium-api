generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // Primary key
  id String @id @default(uuid())

  // Personal information
  email String  @unique
  name  String?

  // External accounts
  googleId  String? @unique @map("google_id")
  discordId String? @unique @map("discord_id")

  // Community memberships
  communities Community[] @relation("CommunityMembers")

  // Community ownership
  ownedCommunities Community[] @relation("CommunityOwner")

  // Row timestamps
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz()

  @@map("users")
}

model Community {
  // Primary key
  id Int @id @default(autoincrement())

  // Community information
  name        String  @unique
  description String?
  color       String

  // Owner
  ownerId String @map("owner_id")
  owner   User   @relation("CommunityOwner", fields: [ownerId], references: [id])

  // Members
  members User[] @relation("CommunityMembers")

  // Tasks
  Task Task[]

  // Row timestamps
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz()

  @@map("communities")
}

model Task {
  // Primary key
  id Int @id @default(autoincrement())

  // Task information
  name        String
  description String
  state       TaskState @default(TODO)

  // Community
  communityId Int       @map("community_id")
  community   Community @relation(fields: [communityId], references: [id])

  // Crowdsourcing
  crowdsourcing Crowdsourcing?

  // Row timestamps
  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()

  @@map("tasks")
}

model Crowdsourcing {
  // Primary key
  id Int @id @default(autoincrement())

  // Crowdsourcing information
  budget   Float
  deadline DateTime

  // Relations
  taskId Int  @unique @map("task_id")
  task   Task @relation(fields: [taskId], references: [id])

  // Row timestamps
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz()

  @@map("crowdsourcing")
}

enum TaskState {
  TODO
  IN_PROGRESS
  DONE
}
